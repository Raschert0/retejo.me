{{> head}}

    <body>
        <div id="signup">
            <form id="form">
                Username: <input name="username" type="text" placeholder="put the username here lol">
                <br><br>
                Password: <input name="password" type="password" placeholder="put the password here lol">
                <br>
                Confirm Password: <input name="confirmpass" type="password" placeholder="confirm yo password">
                <br><br>
                Email <input name="email" type="text" placeholder="you know exactly what you gotta put here">
                <br>
                Confirm Email: <input name="confirmemail" type="text" placeholder="i shouldn't have to tell you this">
            </form>
            <input type="button" value="submit" onClick="submit()">
        </div>

        <script type="text/javascript">
            function submit() {
                var responseMessage = document.createElement('span');
                $.post("/api/signup", $("#form").serializeObject(), function(data) {
                    responseMessage.innerHTML = data;
                    $("span").hide();
                    $("#signup").append(responseMessage);
                });
            }
        </script>
    </body>

