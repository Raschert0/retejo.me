{{> head}}

    <body>
        <div id="createcontent">
            <form id="createform">
                Password: <input name="password" type="password" placeholder="put the password here lol">
                <br><br>
                Parent Name: <input type="text" name="parent"><br>
                Name: <input type="text" name="name"><br>
                Year of Consecration: <input type="number" max="2016" step="1" name="conDate"><br>
                Location: <input type="text" name="loc">
            </form>
            <input type="button" value="submit" onClick="submit()">
        </div>

        <script type="text/javascript">
            function submit() {
                $.post("/api/create", $("#createform").serializeObject(), function(data) {
                    $("#createcontent").append(document.createTextNode(data));
                });
            }
        </script>
    </body>

